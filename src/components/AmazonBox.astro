---
/**
 * /site/src/components/AmazonBox.astro
 * Props:
 *  - asin:   string (erforderlich)
 *  - link:   string (erforderlich, Affiliate-URL)
 *  - cta:    string (optional, Standard: "Bei Amazon ansehen")
 *
 * Hinweis: Wir lesen zusätzlich Metadaten aus /site/asin-data.json:
 *  {
 *    "B0CCHQ38D2": { "title": "Produktname", "image": "/images/foo.jpg", "price": "99,00 €" },
 *    ...
 *  }
 */

interface Props {
  asin: string;
  link: string;
  cta?: string;
}

// JSON mit ASIN-Metadaten laden (Passe den Pfad an, falls deine Datei woanders liegt)
import asinData from "../../asin-data.json";

// Props
const { asin, link, cta = "Bei Amazon ansehen" } = Astro.props;

// Metadaten aus JSON (robust mit Fallbacks)
const meta = (asinData && typeof asinData === "object") ? (asinData as any)[asin] || {} : {};
const title: string = meta.title ?? `Amazon-Produkt ${asin}`;
const image: string | null =
  meta.image?.trim?.() ||
  (meta.img?.trim?.() ?? null) ||  // falls dein JSON "img" statt "image" nutzt
  null;
const price: string | null = meta.price ?? null;

// Bild-Alt-Text
const alt = title || `Produktbild ${asin}`;
---

<style>
  .amz-card {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 1rem;
    border: 1px solid var(--astro-border, #e3e3e3);
    border-radius: 12px;
    padding: 1rem;
    text-decoration: none;
    background: #fff;
    transition: transform .08s ease-out, box-shadow .08s ease-out, border-color .2s;
  }
  .amz-card:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 24px rgba(0,0,0,.06);
    border-color: #d8d8d8;
  }
  .amz-img {
    width: 100%;
    height: 100%;
    max-height: 120px;
    object-fit: contain;
    background: #fafafa;
    border-radius: 8px;
  }
  .amz-title {
    font-weight: 600;
    line-height: 1.25;
    margin: 0 0 .35rem 0;
    color: inherit;
  }
  .amz-meta {
    font-size: .95rem;
    opacity: .85;
    margin-bottom: .5rem;
  }
  .amz-cta {
    display: inline-block;
    border: 1px solid #e0e0e0;
    padding: .5rem .75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: .95rem;
    text-decoration: none;
    background: #f8f8f8;
  }
  .amz-cta:hover {
    background: #f2f2f2;
  }

  /* Mobile: Bild über dem Text */
  @media (max-width: 640px) {
    .amz-card {
      grid-template-columns: 1fr;
    }
    .amz-img {
      max-height: 180px;
    }
  }

  /* kleiner Hinweis unten */
  .amz-disclaimer {
    margin-top: .35rem;
    font-size: .8rem;
    opacity: .7;
  }
</style>

<a class="amz-card" href={link} target="_blank" rel="nofollow sponsored noopener">
  { image
    ? <img class="amz-img" src={image} alt={alt} loading="lazy" decoding="async" />
    : <div class="amz-img" style="display:flex;align-items:center;justify-content:center;font-size:.9rem;opacity:.6;">
        Kein Bild vorhanden
      </div>
  }
  <div>
    <h3 class="amz-title">{title}</h3>
    { price ? <div class="amz-meta">{price}</div> : null }
    <span class="amz-cta">{cta}</span>
    <div class="amz-disclaimer">Werbung / Affiliate-Link</div>
  </div>
</a>